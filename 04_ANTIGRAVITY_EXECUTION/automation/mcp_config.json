{
  "mcpServers": {
    "mysql": {
      "command": "node",
      "args": ["node_modules/@modelcontextprotocol/server-mysql/dist/index.js"],
      "env": {
        "DB_HOST": "localhost",
        "DB_PORT": "3306",
        "DB_USER": "wordpress",
        "DB_PASSWORD": "${DB_PASSWORD}",
        "DB_NAME": "beardsandbucks_db"
      },
      "description": "MySQL database access for WordPress verification",
      "enabled": true
    },
    "fetch": {
      "command": "node",
      "args": ["node_modules/@modelcontextprotocol/server-fetch/dist/index.js"],
      "env": {
        "ALLOWED_DOMAINS": "beardsandbucks.com,api.mapbox.com",
        "TIMEOUT_MS": "10000"
      },
      "description": "HTTP fetch for API validation and site health checks",
      "enabled": true
    }
  },
  "automation": {
    "preFlightEnabled": true,
    "backgroundMonitoringEnabled": true,
    "postExecutionVerificationEnabled": true,
    "alertThresholds": {
      "errorLogThreshold": 10,
      "pageLoadTimeThreshold": 5000,
      "siteDownRetries": 2
    },
    "cronSchedules": {
      "siteHealthMonitor": "*/15 * * * *",
      "errorLogWatcher": "*/5 * * * *",
      "backupVerification": "0 2 * * *",
      "performanceMonitor": "0 * * * *"
    }
  },
  "notifications": {
    "strategy": "minimal",
    "levels": {
      "INFO": "logged_silently",
      "WARN": "logged_with_flag",
      "CRITICAL": "action_flag_created"
    },
    "actionFlagPath": "/04_ANTIGRAVITY_EXECUTION/logs/ATTENTION_NEEDED.flag"
  },
  "verification": {
    "screenshotDirectory": "/04_ANTIGRAVITY_EXECUTION/VERIFICATION_SCRIPTS/visual/current_screenshots",
    "baselineDirectory": "/04_ANTIGRAVITY_EXECUTION/VERIFICATION_SCRIPTS/visual/baseline_screenshots",
    "diffDirectory": "/04_ANTIGRAVITY_EXECUTION/VERIFICATION_SCRIPTS/visual/diff_screenshots",
    "parallelExecution": true,
    "timeout": 300
  }
}
